<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro"
       name="ur3" >

  <!-- common stuff -->
  <xacro:include filename="$(find ur_description)/urdf/common.gazebo.xacro" />

  <!-- ur3 -->
  <xacro:include filename="$(find ur_description)/urdf/ur3.urdf.xacro" />

  <!-- arm -->
  <xacro:ur3_robot prefix="" joint_limited="true"/>

  <!-- Set initial joint angles -->
  <gazebo>
    <plugin name="ur_initial_pose" filename="libInitialPosePlugin.so">
      <shoulder_pan_joint>3.14</shoulder_pan_joint>
      <shoulder_lift_joint>-1.22</shoulder_lift_joint>
      <elbow_joint>-1.9</elbow_joint>
      <wrist_1_joint>-1.57</wrist_1_joint>
      <wrist_2_joint>1.50</wrist_2_joint>
      <wrist_3_joint>0.0</wrist_3_joint>
    </plugin>
  </gazebo>

  <link name="world" />

  <joint name="world_joint" type="fixed">
    <parent link="world" />
    <child link = "base_link" />
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
  </joint>

</robot>
